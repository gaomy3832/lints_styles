# pylint configuration file
#
# Use symlink:
#
# > ln -s pylintrc ~/.pylintrc
#
# Default template can be generated by:
#
# > pylint --generate-rcfile
#

[MESSAGES CONTROL]
disable=
    I0011,  # locally-disabled,
    C0325,  # superfluous-parens,
    W0105,  # pointless-string-statement,
    W0141,  # bad-builtin,

[BASIC]
# Allow single-char and two-char variable names
variable-rgx=[a-z_][a-z0-9_]*$

[DESIGN]
max-args=25
max-branches=25
max-locals=50
max-statements=200
